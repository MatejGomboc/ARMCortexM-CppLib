{
    "version": 3,
    "configurePresets": [
        {
            "name": "base-common",
            "hidden": true,
            "toolchainFile": "${sourceDir}/arm_none_eabi_gcc.cmake",
            "cacheVariables": {
                "ARM_CORTEX_M_ARCH": "M0PLUS",
                "BUILD_ARM_CORTEX_M_TESTS": true
            }
        },
        {
            "name": "multi",
            "inherits": "base-common",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build-multi"
        },
        {
            "name": "base-single",
            "hidden": true,
            "inherits": "base-common",
            "generator": "Ninja"
        },
        {
            "name": "single-debug",
            "inherits": "base-single",
            "binaryDir": "${sourceDir}/build-single/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "debug"
            }
        },
        {
            "name": "single-minsize",
            "inherits": "base-single",
            "binaryDir": "${sourceDir}/build-single/minsize",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "minsize"
            }
        },
        {
            "name": "single-maxspeed",
            "inherits": "base-single",
            "binaryDir": "${sourceDir}/build-single/maxspeed",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "maxspeed"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "multi-debug",
            "configurePreset": "multi",
            "configuration": "debug"
        },
        {
            "name": "multi-maxspeed",
            "configurePreset": "multi",
            "configuration": "maxspeed"
        },
        {
            "name": "multi-minsize",
            "configurePreset": "multi",
            "configuration": "minsize"
        },
        {
            "name": "single-debug",
            "configurePreset": "single-debug"
        },
        {
            "name": "single-minsize",
            "configurePreset": "single-minsize"
        },
        {
            "name": "single-maxspeed",
            "configurePreset": "single-maxspeed"
        }
    ],
    "testPresets": [
        {
            "name": "base-test",
            "hidden": true,
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            },
            "execution": {
                "jobs": 0
            }
        },
        {
            "name": "multi-debug",
            "inherits": "base-test",
            "configurePreset": "multi",
            "configuration": "debug"
        },
        {
            "name": "multi-minsize",
            "inherits": "base-test",
            "configurePreset": "multi",
            "configuration": "minsize"
        },
        {
            "name": "multi-maxspeed",
            "inherits": "base-test",
            "configurePreset": "multi",
            "configuration": "maxspeed"
        },
        {
            "name": "single-debug",
            "inherits": "base-test",
            "configurePreset": "single-debug"
        },
        {
            "name": "single-minsize",
            "inherits": "base-test",
            "configurePreset": "single-minsize"
        },
        {
            "name": "single-maxspeed",
            "inherits": "base-test",
            "configurePreset": "single-maxspeed"
        }
    ]
}
