{
    "cSpell.ignoreRandomStrings": true,
    "cSpell.spellCheckOnlyWorkspaceFiles": true,
    "cSpell.caseSensitive": false,
    "cSpell.checkOnlyEnabledFileTypes": true,
    "cSpell.useGitignore": true,
    "cSpell.languageSettings": [
        {
            "languageId": "*",
            "locale": "en-GB",
            "dictionaries": [
                "wordsEnGb"
            ]
        },
        {
            "languageId": "*",
            "dictionaries": [
                "companies",
                "softwareTerms",
                "misc"
            ]
        }
    ],
    "cSpell.customDictionaries": {
        "armcortexmlib-dictionary": {
            "name": "armcortexmlib-dictionary",
            "path": "${workspaceRoot}/.cspell/armcortexmlib-dictionary.txt",
            "addWords": true,
            "scope": "workspace"
        }
    },
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.renderWhitespace": "boundary",
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    }
}
