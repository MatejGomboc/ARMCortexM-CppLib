// Generic Cortex-M0+ test platform for Renode

// CPU 
cpu: CPU.CortexM @ sysbus
    cpuType: "cortex-m0plus"
    nvic: nvic

// Memory regions
flash: Memory.MappedMemory @ sysbus 0x00000000
    size: 0x40000  // 256KB

ram: Memory.MappedMemory @ sysbus 0x20000000
    size: 0x10000  // 64KB

// NVIC - Nested Vectored Interrupt Controller
nvic: IRQControllers.NVIC @ sysbus 0xE000E000
    systickFrequency: 1000000  // 1MHz
    IRQ -> cpu@0

// Test output peripheral - using AnalyzableUART for compatibility
testOutput: UART.AnalyzableUART @ sysbus 0x40000000
    size: 0x1000

// Test completion register - simple memory location
testComplete: Memory.MappedMemory @ sysbus 0x40001000
    size: 0x4

// Optional: System Control Space (SCS) peripherals are part of CPU model
// This includes SCB, SysTick (in NVIC), MPU (if present), etc.
